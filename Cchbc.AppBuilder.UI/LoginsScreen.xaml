<Page
    x:Class="Cchbc.AppBuilder.UI.LoginsScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#2A2A32"
    Loaded="LoginsScreenLoaded"
    mc:Ignorable="d">

    <StackPanel Background="#414052" Margin="20" Orientation="Vertical">
        <ListView ItemsSource="{x:Bind ViewModel.Logins}" Margin="10" HorizontalAlignment="Stretch" Foreground="Orange"></ListView>
        <Button Margin="10" HorizontalAlignment="Stretch" Foreground="Orange" Tapped="AddLoginTapped">Add Login</Button>
    </StackPanel>
</Page>
